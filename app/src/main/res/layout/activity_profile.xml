<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Name:"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name_title"
        android:layout_marginLeft="5dp"
        android:text="Neel Trivedi"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/username_title"
        android:layout_below="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Username:" />
    <TextView
        android:id="@+id/username_tv"
        android:layout_below="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/username_title"
        android:layout_marginLeft="5dp"
        android:text="neel1998"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/email_title"
        android:layout_below="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Email:" />
    <TextView
        android:id="@+id/email_tv"
        android:layout_below="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/email_title"
        android:layout_marginLeft="5dp"
        android:text="neel.trivedi1998@gmail.com"
        android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/address_title"
        android:layout_below="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Address:" />
    <TextView
        android:id="@+id/address_tv"
        android:layout_below="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/address_title"
        android:layout_marginLeft="5dp"
        android:text="A/2, 101, Center Point Apt, Adajan, Surat"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/contact_title"
        android:layout_below="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Contact:" />
    <TextView
        android:id="@+id/contact_tv"
        android:layout_below="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contact_title"
        android:layout_marginLeft="5dp"
        android:text="1234567890"
        android:layout_marginTop="5dp" />

</RelativeLayout>